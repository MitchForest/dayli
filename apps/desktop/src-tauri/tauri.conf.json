{
  "$schema": "../../../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Dayli",
  "version": "0.1.0",
  "identifier": "com.dayli.desktop",
  "build": {
    "frontendDist": "../../web/.next/out",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "cd ../web && bun run build"
  },
  "app": {
    "windows": [
      {
        "title": "Dayli",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "deep-link": {
      "mobile": [],
      "desktop": {
        "schemes": ["dayli"]
      }
    },
    "shell": {
      "open": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
